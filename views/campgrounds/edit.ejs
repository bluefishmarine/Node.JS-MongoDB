<%include ../partials/header%>


    <div class="container">
        <div class="row">
            <h1 style="text-align:center">Edit <%=campground.name%></h1>
            <div style="margin: 25px auto; width:30%">
                    <form method="POST" action="/campgrounds/<%=campground._id%>?_method=PUT">
                        <div class="form-group">
                            <input class="form-control" type="text" placeholder="Name" name="campground[name]" value="<%=campground.name%>">    
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" value="<%=campground.price%>" name="campground[price]" min="0.01" step="0.01">    
                        </div>
                        <div class="form-group">
                             <input class="form-control" type="text" placeholder="Image URL" name="campground[image]" value="<%=campground.image%>">   
                        </div>
                         <div class="form-group">
                             <textarea class="form-control" placeholder="Camp Description" name="campground[description]" rows="10" cols="50"><%=campground.description%></textarea>   
                        </div>
                        <div class="form-group">
                             <button class="btn btn-lg btn-primary btn-block"type="Submit">Submit!</button>    
                        </div>
                    </form>  
                    <a href="/">Go Back</a>
                </div>
            </div>
    </div>
  
<%include ../partials/footer%>