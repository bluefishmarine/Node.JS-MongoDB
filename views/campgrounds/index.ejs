<%include ../partials/header%>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp Yo!</h1>
                <p>Check Out These Ballin' Campsites!</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
                </p>   
            </div>
        </header>
    
        <div class="row text-center" style="display:flex; flex-wrap:wrap;">
             <% campgrounds.forEach(function(val){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src= <%=val.image%>>
                            <div class="caption">
                                <h4><%=val.name%></h4>
                            </div>
                            <p>
                                <a href="/campgrounds/<%=val._id%>" class="btn btn-primary">More Info</a>
                            </p>
                    </div>
                </div>
            <% }) %>    
        </div>
        <p><a href="/">Home</a></p>
    </div>
    
<%include ../partials/footer%>