<%include ../partials/header%>


    <div class="container">
        <div class="row">
            <h1 style="text-align:center">Add New Comment to <%=campground.name%></h1>
            <div style="margin: 25px auto; width:30%">
                    <form method="POST" action="/campgrounds/<%=campground._id%>/comments">
                         <div class="form-group">
                             <textarea class="form-control" placeholder="Add Comment" name="comment[text]" rows="10" cols="50"></textarea>   
                        </div>
                        <div class="form-group">
                             <button class="btn btn-lg btn-primary btn-block"type="Submit">Submit!</button>    
                        </div>
                    </form>  
                    <a href="/">Go Back</a>
                </div>
            </div>
    </div>
  
<%include ../partials/footer%>